<Window x:Class="QR_code_generator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QR_code_generator"
        mc:Ignorable="d"
        Title="Generátor QR kódu" Height="450" Width="800">
    <Grid x:Name="VYGENERUJ" Background="#FFEFEFEF" OpacityMask="#FF962525">
        <Button Content="GENERUJ" HorizontalAlignment="Center" Margin="0,364,0,0" VerticalAlignment="Top" Height="45" Width="308" Background="#FF94CA39" FontFamily="Swis721 Hv BT" Click="Button_Click"/>
        <TextBox x:Name="textboxInput" HorizontalAlignment="Center" Margin="0,316,0,0" TextWrapping="Wrap" Text="Zadej text" VerticalAlignment="Top" Width="308" Height="43" TextChanged="TextBox_TextChanged" FontSize="16" MouseLeftButtonDown="textboxInput_MouseLeftButtonDown"/>
        <Image x:Name="obrazek" Height="246" Margin="250,49,250,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
